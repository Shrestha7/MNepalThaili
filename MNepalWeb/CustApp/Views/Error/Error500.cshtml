
@{
    ViewBag.Title = "Internal Server Error";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}


<link href="~/Content/NewIcon/style.css" rel="stylesheet" />

<div class="col-md-5 offset-3">
    <div class="container-fluid m-5 center-block">
        <h2 style="color:red">OOPS!!!!!</h2>
        <h3 style="color:red">There is an connectivity issue with server, Please try again later</h3>
    </div>

</div>

<br />
<br />
@section scripts{
    <script type="text/javascript">
        setTimeout('Redirect()', 5000);
        function Redirect() {
            var url = '@Url.Action("Index", "UserDashboard")';
            window.location.href = url;
        }
    </script>
}
