
@{
    ViewBag.Title = "Customer BankLinked List";
}

<!-- =============================================== -->
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Customer
        <small>Bank Link Reset</small>
    </h1>
    <br />
    @if (this.ViewData["Customermodify_messsage"] != null)
    {
        if (this.ViewData["message_class"].ToString() == "success_info")
        {
            <div class="alert alert-success">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <h4>Success</h4> @this.ViewData["Customermodify_messsage"]
            </div>
        }
        else
        {
            <div class="alert alert-danger">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <h4>Error</h4> @this.ViewData["Customermodify_messsage"]
            </div>
        }
    }

    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-user"></i> Customer</a></li>
        <li class="active"> Bank Link Reset</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Main row -->
    <div class="row">

        <!-- Start -->
        <div class="col-xs-12">

            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Search Customer For Bank Link Reset</h3>
                </div>
                <!-- /.box-header -->

                @Html.Partial("_PartialSearch")

                <!-- /.box-body -->
            </div>
            <!--/.box -box-danger-->

            @Html.Action("CustomerDetails")

        </div>
        <!-- /.col-xs--->
        <!-- End-->

    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
<!-- =============================================== -->

@section scripts{

    <script>

        //$("#MobileNo").hide();
        $("#Name").hide();
        $("#AccountNo").hide();
        $("#CustomerDetails").hide();

        $("input[type='radio']").change(function () {

            if ($(this).val() == "Mobile Number") {
                $("#MobileNo").show();
                $("#Name").hide();
                $("#AccountNo").hide();
            }
            else if ($(this).val() == "Name") {
                $("#Name").show();
                $("#AccountNo").hide();
                $("#MobileNo").hide();
            }
            else if ($(this).val() == "AccountNumber") {
                $("#AccountNo").show();
                $("#MobileNo").hide();
                $("#Name").hide();
            }
            else if ($(this).val() == "Name/Account") {
                $("#Name").show();
                $("#AccountNo").show();
                $("#MobileNo").hide();
            } else {
                $("#MobileNo").hide();
                $("#Name").hide();
                $("#AccountNo").hide();
            }

        });

        $('#btnSearch').click(function (e) {

            var mobileNo = $('#txtMobileNoID').val();
            var name = $('#txtNameID').val();
            var accountNo = $('#txtAccountNoID').val();

            var SearchCol;

            var radios = document.getElementsByName('optionsRadios');
            for (var j = 0; j < radios.length; j++) {
                if (radios[j].checked) {
                    debugger;
                    SearchCol = radios[j].value;
                    break;
                }
            }

            e.preventDefault();

            $.ajax({
                url: '@Url.Action("CustomerDetails", "Customer")',
                type: 'GET',
                data: {
                    SearchCol: SearchCol,
                    txtMobileNo: mobileNo,
                    txtName: name,
                    txtAccountNo: accountNo
                },
                success: function (results) {                   
                    $('#CustomerDetails').html(results);
                    $("#CustomerDetails").show();
                },
                error: function () {
                    alert('Error Occured!!');
                }
            });

        });

    </script>
}

