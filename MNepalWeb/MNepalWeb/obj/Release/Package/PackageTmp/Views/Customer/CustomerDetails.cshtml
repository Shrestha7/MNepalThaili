
@{
    ViewBag.Title = "CustomerDetails";
    Layout = null;
}

<!-- Start Data Show in Table -->
<div id="CustomerDetails" class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Customer Details</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">

        @if (ViewData["dtableCustomerStatus"] == null)
        {
            <div class="panel-body"> <b>No Result Found !! </b> </div>
        }
        else if (ViewData["dtableCustomerStatus"] != null)
        {
            <table class="table table-condensed">
                <thead>
                    <tr>
                        <th>UserName</th>
                        <th>Customer Name</th>
                        <th>Account Number</th>
                        <th>DateOfBirth</th>
                        <th>Created By</th>
                        <th>Approved By</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (System.Data.DataRow dr in (ViewData["dtableCustomerStatus"] as System.Data.DataTable).Rows)
                {
                        <tr>
                            <td> @dr["UserName"] </td>
                            <td> @dr["Name"] </td>
                            <td> @dr["BankAccountNumber"] </td>
                            <td> @DateTime.Parse(dr["DateOfBirth"].ToString()).ToString("dd/MM/yyyy")</td>
                            <td> @dr["CreatedBy"] </td>
                            <td> @dr["ApprovedBy"] </td>                           
                            <td>
                                <a href="@Url.Action("BankLinkReset","Customer", new { id = @dr["ClientCode"]} )">Reset</a>
                            </td>
                        </tr>
                    } <!-- for each end-->
                </tbody>
            </table>
        }

    </div>
</div>
<!-- End Data Show in Table -->

